# Heimdall Firewall Environment Configuration
# Copy this file to .env and customize the values for your environment

# Database Configuration (12-factor: III. Config)
DATABASE_URL=postgresql://username:password@localhost:5432/llm_fw_development
LLM_FW_DATABASE_PASSWORD=your_production_password

# Server Configuration
PORT=3000
RAILS_ENV=development
RAILS_LOG_LEVEL=info
RAILS_SERVE_STATIC_FILES=false

# Security Configuration
SECRET_KEY_BASE=your_secret_key_base_here
RAILS_MASTER_KEY=your_master_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Prompt Firewall Configuration
PROMPT_FIREWALL_ENABLED=true
PROMPT_FIREWALL_DEFAULT_ACTION=block
PROMPT_FIREWALL_LOGGING_ENABLED=true
PROMPT_FIREWALL_LOG_LEVEL=info
PROMPT_FIREWALL_LOG_BLOCKED=true
PROMPT_FIREWALL_LOG_ALLOWED=false

# Performance Configuration
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2

# Monitoring and Observability
RAILS_LOG_TO_STDOUT=true
RAILS_LOG_LEVEL=info

# Cache Configuration (for production)
REDIS_URL=redis://localhost:6379/0

# Optional: External Services
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Development/Test specific
# DISABLE_DATABASE_ENVIRONMENT_CHECK=1
